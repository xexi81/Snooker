<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ButtonChanger" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="WindowAnimationStyle">
        <item name="android:windowEnterAnimation">@anim/translate_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/translate_out_top</item>
    </style>

    <style name="Button" parent="ThemeOverlay.AppCompat.DayNight.ActionBar">
        <item name="colorAccent">@null</item>
        <item name="colorPrimary">@null</item>
    </style>
</resources>


